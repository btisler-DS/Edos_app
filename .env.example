# EDOS Environment Configuration
# Copy this file to .env and fill in your API keys

# Anthropic API Key (for Claude models)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# OpenAI API Key (for GPT models)
OPENAI_API_KEY=your_openai_api_key_here

# Server Configuration
PORT=3001

# Authentication (for remote access)
# Set to true to require password authentication
# If false, auth is only enabled after password is set via /api/auth/setup
AUTH_ENABLED=false

# Secret key for token signing (auto-generated if not set)
# Set this to a random 64-character hex string for production
# AUTH_SECRET=your_64_char_hex_secret_here

# Web Search (Optional)
# Enable web search with @edos search: "query" command
WEB_SEARCH_ENABLED=false
WEB_SEARCH_PROVIDER=bing

# Bing Web Search API (if using Bing)
BING_SEARCH_API_KEY=your_bing_api_key_here

# Google Custom Search API (if using Google)
GOOGLE_SEARCH_API_KEY=your_google_api_key_here
GOOGLE_SEARCH_ENGINE_ID=your_search_engine_cx_id_here

# Ollama Configuration (Local LLM)
# URL where Ollama is running (default: http://localhost:11434)
OLLAMA_URL=http://localhost:11434

# Model to use for utility tasks (title generation, metadata)
# Recommended: llama3.2:latest, phi3:latest (faster)
OLLAMA_UTILITY_MODEL=llama3.2:latest

# Model to use for embeddings (semantic search)
# Recommended: nomic-embed-text
OLLAMA_EMBEDDING_MODEL=nomic-embed-text

# Use local embeddings instead of OpenAI (set to true to avoid API costs)
USE_LOCAL_EMBEDDINGS=false

# Backup Configuration
# Enable automatic scheduled backups
BACKUP_ENABLED=false
# Hours between automatic backups (default: 24)
BACKUP_INTERVAL_HOURS=24
# Number of backups to keep (default: 7)
BACKUP_KEEP_COUNT=7
# Directory for backups (default: server/backups)
# BACKUP_DIR=/path/to/backup/directory
# Compress backups with gzip (default: true)
BACKUP_COMPRESS=true
